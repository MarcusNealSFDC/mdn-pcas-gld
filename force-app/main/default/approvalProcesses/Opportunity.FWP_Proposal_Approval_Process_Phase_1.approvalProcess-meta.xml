        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>PNSO_Contracting_Officer_Approves</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>PNSO_Technical_Rep2__c</name>
                <type>relatedUserField</type>
            </approver>
